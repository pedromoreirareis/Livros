<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/margem_16"
        android:paddingRight="@dimen/margem_16"
        android:paddingTop="@dimen/margem_16">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_pesquisa"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:hint="@string/hint_edt_busca"
                android:imeOptions="actionSearch"
                android:inputType="text|textAutoComplete|textAutoCorrect|textCapSentences"
                android:maxLines="1"
                android:scrollHorizontally="true" />

            <ImageView
                android:id="@+id/iv_pesquisa"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:clickable="true"
                android:contentDescription="@string/descricao_img"
                android:src="@drawable/ic_search_black_48px" />

        </LinearLayout>
        <ListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

        </ListView>

    </LinearLayout>
</layout>

